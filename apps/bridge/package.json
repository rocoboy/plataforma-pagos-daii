{
  "name": "kafka-bridge",
  "version": "1.0.0",
  "description": "Kafka to Webhook Bridge Service using Bun",
  "main": "src/index.ts",
  "scripts": {
    "preinstall": "node ./scripts/prepare-types.js",
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "serve:http": "bun run src/server-only.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "docker:build": "docker build -t kafka-bridge .",
    "docker:run": "docker run -p 8080:8080 --env-file .env kafka-bridge",
    "docker:compose": "docker-compose up -d",
    "docker:compose:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "test:send": "node test-sender.js",
    "clean": "rm -rf dist node_modules bun.lockb"
  },
  "dependencies": {
    "@plataforma/types": "file:.types",
    "amqplib": "^0.10.9",
    "kafkajs": "^2.2.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^20.19.23",
    "bun-types": "latest",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "kafka",
    "webhook",
    "bridge",
    "bun",
    "typescript"
  ],
  "author": "Plataforma Pagos DAII",
  "license": "MIT"
}
