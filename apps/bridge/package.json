{
  "name": "kafka-bridge",
  "version": "1.0.0",
  "description": "Kafka to Webhook Bridge Service using Bun",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "docker:build": "docker build -t kafka-bridge .",
    "docker:run": "docker run -p 8080:8080 --env-file .env kafka-bridge",
    "docker:compose": "docker-compose up -d",
    "docker:compose:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "test:send": "node test-sender.js",
    "clean": "rm -rf dist node_modules bun.lockb"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "kafkajs": "^2.2.4"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.23",
    "bun-types": "latest",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "kafka",
    "webhook",
    "bridge",
    "bun",
    "typescript"
  ],
  "author": "Plataforma Pagos DAII",
  "license": "MIT"
}
