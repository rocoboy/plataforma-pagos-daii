{
  "name": "rabbitmq-bridge",
  "version": "1.0.0",
  "description": "RabbitMQ to Webhook Bridge Service using Bun",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "docker:build": "docker build -t rabbitmq-bridge .",
    "docker:run": "docker run -p 8080:8080 --env-file .env rabbitmq-bridge",
    "docker:compose": "docker-compose up -d",
    "docker:compose:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "test:send": "node test-sender.js",
    "clean": "rm -rf dist node_modules bun.lockb"
  },
  "dependencies": {
    "amqplib": "^0.10.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.4",
    "@types/node": "^20.10.0",
    "bun-types": "latest",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "rabbitmq",
    "webhook",
    "bridge",
    "bun",
    "typescript"
  ],
  "author": "Plataforma Pagos DAII",
  "license": "MIT"
}
