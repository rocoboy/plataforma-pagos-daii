{
  "version": 2,
  "projects": [
    {
      "name": "api",
      "rootDirectory": "apps/api",
      "buildCommand": "npm run build",
      "outputDirectory": "dist",
      "framework": "nextjs"
    },
    {
      "name": "web",
      "rootDirectory": "apps/web",
      "buildCommand": "npm run build",
      "outputDirectory": "build",
      "framework": "create-react-app"
    }
  ],
  "github": {
    "enabled": true,
    "autoJobCancelation": true,
    "silent": false
  }
}
